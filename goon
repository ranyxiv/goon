local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
    Name = "Seed Shop",
    LoadingTitle = "Conectando...",
    LoadingSubtitle = "Usando Rayfield",
    ConfigurationSaving = {
        Enabled = false
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

local remote = game:GetService("ReplicatedStorage"):WaitForChild("BuySeedStock")

-- Cria uma aba no seu hub
local Tab = Window:CreateTab("Loja de Sementes", 1234567890) -- o n√∫mero aqui √© um ID de √≠cone opcional

-- Cria o bot√£o dentro da aba
Tab:CreateButton({
    Name = "Comprar Semente de Cenoura ü•ï",
    Callback = function()
        local args = { "Carrot" } -- substitua por qualquer semente que desejar
        if remote:IsA("RemoteEvent") then
            remote:FireServer(unpack(args))
        elseif remote:IsA("RemoteFunction") then
            local result = remote:InvokeServer(unpack(args))
            print("Resultado:", result)
        end
    end,
})
