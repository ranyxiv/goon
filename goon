local player = game.Players.LocalPlayer
local pet = workspace.Pets:FindFirstChild(player.Name)
local gardenCenter = workspace.Garden.Center.Position

local button = script.Parent -- O script está dentro do botão

button.MouseButton1Click:Connect(function()
    if pet and pet:FindFirstChild("HumanoidRootPart") then
        -- Move o pet para o centro do jardim
        pet:MoveTo(gardenCenter)

        -- Espera o pet chegar, então paralisa
        pet:MoveTo(gardenCenter)
        pet.HumanoidRootPart.Anchored = true

        -- Opcional: Mostra uma mensagem
        game.StarterGui:SetCore("SendNotification", {
            Title = "Pet Paralisado!";
            Text = "Seu pet foi paralisado no jardim!";
            Duration = 2;
        })
    else
        -- Opcional: Mensagem de erro
        game.StarterGui:SetCore("SendNotification", {
            Title = "Erro";
            Text = "Pet não encontrado!";
            Duration = 2;
        })
    end
end)
