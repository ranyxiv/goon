-- Goon Hub | Por Rany
-- Interface feita com Rayfield
-- Script para automaÃ§Ãµes no Grow a Garden

local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Criar janela principal
local Window = Rayfield:CreateWindow({
    Name = "Goon Hub | Por Rany",
    LoadingTitle = "Carregando Goon Hub...",
    LoadingSubtitle = "Feito por Rany",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "GoonHubConfig",
    },
    Discord = {
        Enabled = false,
        Invite = "",
        RememberJoins = false
    },
    KeySystem = false
})

-- VariÃ¡veis para controle
local AutoPlant = { Value = false }
local SelectedSeed = { Selected = "Blueberry" }

-- FunÃ§Ã£o principal de plantio
local function AutoPlantLoop()
    if not AutoPlant.Value then return end
    print("Plantando: " .. SelectedSeed.Selected)
    -- Aqui entra o cÃ³digo de automaÃ§Ã£o real do plantio no jogo
end

-- ðŸª´ Aba: Auto-Plant
local PlantTab = Window:CreateTab("Auto-Plant", 4483362458)

PlantTab:CreateToggle({
    Name = "Plantar automaticamente",
    CurrentValue = false,
    Flag = "AutoPlant",
    Callback = function(Value)
        AutoPlant.Value = Value
        if Value then
            AutoPlantLoop()
        end
    end,
})

PlantTab:CreateDropdown({
    Name = "Selecionar semente",
    Options = {"Blueberry", "Tomato", "Cenoura"},
    CurrentOption = "Blueberry",
    Flag = "SelectedSeed",
    Callback = function(Option)
        SelectedSeed.Selected = Option
    end,
})

PlantTab:CreateButton({
    Name = "Plantar agora",
    Callback = function()
        AutoPlantLoop()
    end,
})

-- ðŸŒ¾ VocÃª pode adicionar outras abas como Auto-Harvest, Auto-Buy etc.
