local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
    Name = "Seed Shop",
    LoadingTitle = "Conectando...",
    LoadingSubtitle = "Usando Rayfield",
    ConfigurationSaving = {
        Enabled = false
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

-- Cria a aba corretamente
local Tab = Window:CreateTab("Loja de Sementes", 4483362458) -- √çcone opcional

-- Acessa o Remote
local remote = game:GetService("ReplicatedStorage"):WaitForChild("BuySeedStock")

-- Adiciona o bot√£o que executa a compra
Tab:CreateButton({
    Name = "Comprar Semente de Cenoura ü•ï",
    Callback = function()
        local args = { "Carrot" } -- ou troque por outra semente
        if remote:IsA("RemoteEvent") then
            remote:FireServer(unpack(args))
        elseif remote:IsA("RemoteFunction") then
            local result = remote:InvokeServer(unpack(args))
            print("Resultado:", result)
        end
    end
})
