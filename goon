-- LocalScript em StarterGui/GardenToggleGui

local button = script.Parent:WaitForChild("ToggleButton")
local workspace = game:GetService("Workspace")

local petName       = "moon cat"             -- Nome exato do modelo do pet no Workspace
local gardenCenter  = Vector3.new(0, 0, 0)    -- Posição central do jardim
local defaultSpeed  = 16                     -- Velocidade padrão ao descongelar
local isFrozen      = false

local function togglePetFreeze()
    local pet = workspace:FindFirstChild(petName)
    if not pet or not pet:FindFirstChild("HumanoidRootPart") then
        warn("Pet '" .. petName .. "' não encontrado ou sem HumanoidRootPart")
        return
    end

    if isFrozen then
        -- Descongela
        pet.HumanoidRootPart.Anchored = false
        if pet:FindFirstChild("Humanoid") then
            pet.Humanoid.WalkSpeed = defaultSpeed
        end
        button.Text = "Freeze Pet"
    else
        -- Teleporta e congela
        pet:SetPrimaryPartCFrame(CFrame.new(gardenCenter))
        pet.HumanoidRootPart.Anchored = true
        if pet:FindFirstChild("Humanoid") then
            pet.Humanoid.WalkSpeed = 0
        end
        button.Text = "Unfreeze Pet"
    end

    isFrozen = not isFrozen
end

button.MouseButton1Click:Connect(togglePetFreeze)
